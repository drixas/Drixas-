export default {
  name: ['stafe', 'colaboradores'],
  description: 'Ver la lista de desarrolladores del bot.',
  async run(m, { conn, usedPrefix, command }) {
    // Personaliza la lista con los colaboradores reales de tu bot
    const staff = [
      { nombre: 'The-King-Brayan', rol: 'Creador Principal', contacto: 'wa.me/573221234567' },
      { nombre: 'Drixas', rol: 'Co-Desarrollador', contacto: 'wa.me/573001112233' }
      // Agrega más colaboradores aquí si deseas
    ];

    let texto = '👨‍💻 *Colaboradores y Desarrolladores del Bot:*\n';
    texto += staff.map((p, i) =>
      `*${i + 1}.* ${p.nombre} [${p.rol}]\n${p.contacto}`
    ).join('\n\n');

    await conn.sendMessage(m.chat, { text: texto }, { quoted: m });
  }
}