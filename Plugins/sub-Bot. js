export default {
  name: ['bots', 'sockets'],
  description: 'Ver la lista de sub-Bot activos/conectados.',
  async run(m, { conn }) {
    // Si tienes una variable/funciÃ³n real, cÃ¡mbiala aquÃ­
    // Ejemplo de lista estÃ¡tica (personaliza con tu lÃ³gica si lo deseas)
    const subBots = [
      { nombre: 'Drixas-SubBot1', estado: 'âœ… En lÃ­nea' },
      { nombre: 'Drixas-SubBot2', estado: 'â¸ï¸ En pausa' }
      // ...agrega mÃ¡s aquÃ­ o usa tu lÃ³gica real
    ];

    let texto = 'ðŸ¤– *Lista de Sub-Bots conectados:*\n\n';
    texto += subBots.map((bot, i) => `*${i + 1}.* ${bot.nombre} - ${bot.estado}`).join('\n');

    await conn.sendMessage(m.chat, { text: texto }, { quoted: m });
  }
}