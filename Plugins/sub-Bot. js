export default {
  name: ['bots', 'sockets'],
  description: 'Ver la lista de sub-Bot activos/conectados.',
  async run(m, { conn }) {
    // Si tienes una variable/función real, cámbiala aquí
    // Ejemplo de lista estática (personaliza con tu lógica si lo deseas)
    const subBots = [
      { nombre: 'Drixas-SubBot1', estado: '✅ En línea' },
      { nombre: 'Drixas-SubBot2', estado: '⏸️ En pausa' }
      // ...agrega más aquí o usa tu lógica real
    ];

    let texto = '🤖 *Lista de Sub-Bots conectados:*\n\n';
    texto += subBots.map((bot, i) => `*${i + 1}.* ${bot.nombre} - ${bot.estado}`).join('\n');

    await conn.sendMessage(m.chat, { text: texto }, { quoted: m });
  }
}