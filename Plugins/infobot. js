export default {
  name: ['infobot', '#infobot'],
  description: 'Ver la informaciÃ³n completa de la bot',
  async run(m, { conn }) {
    const texto = `
â•­â”â”â”âœ¦ ğ™„ğ™‰ğ™ğ™Šğ˜½ğ™Šğ™ âœ¦â”â”â”â•®
