export default {
  name: 'horavnz',
  description: 'Muestra la hora nacional de Venezuela 🇻🇪',
  async run(m, { conn }) {
    // Obtener la hora actual de Venezuela (zona horaria: America/Caracas)
    const fecha = new Date().toLocaleString('es-VE', { 
      timeZone: 'America/Caracas', 
      hour: '2-digit', minute: '2-digit', second: '2-digit', 
      hour12: false, 
      day: '2-digit', month: '2-digit', year: 'numeric'
    });

    const mensaje = `
🕐 *Hora Nacional de Venezuela 🇻🇪*
${fecha}
`.trim();

    await conn.sendMessage(m.chat, { text: mensaje }, { quoted: m });
  }
}